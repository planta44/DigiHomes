# Server
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/digi_homes

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Brevo (Email Service) - Get API key from https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM=noreply@digihomes.co.ke
EMAIL_FROM_NAME=DIGI Homes

# Cloudinary (Image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Admin Settings
ADMIN_EMAIL=admin@digihomes.co.ke
